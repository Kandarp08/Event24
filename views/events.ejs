<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>

    <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">    
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>    

    <style>
        
        .event
        {
            width: 150px;
            height: 200px;
            margin: 20px;

            border: 1px solid black;
            border-radius: 10px;
            float: left;
        }

        .event:hover
        {
            cursor: pointer;
            outline: 2px solid gray;
            outline-offset: 5px;
        }

    </style>

</head>

<body>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
    
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                <span class="icon-bar"></span>                        
            </button>
    
            <a class="navbar-brand" href="#">Event24</a>
        </div>
    
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="nav navbar-nav navbar-right">

                <!-- Dropdown menu for profile settings and logout-->

            </ul>
        </div>
    </div>
</nav>

<% for (let i = 0; i < events.length; ++i) { %>

    <div class="event" data-toggle="modal" data-target="#eventInfo<%=i%>"></div>

    <div class="modal fade" id="eventInfo<%=i%>">
        <div class="modal-dialog">
            
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2><%=events[i].name %></h2>
                </div>

                <div class="modal-body">
                    <p><%=events[i].description%></p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

<% } %>

<div class="event">

    <center>
    <span class="glyphicon glyphicon-plus" style="margin: 75px auto; font-size: 50px;"></span>
    </center>
    
</div>
    
</body>

</html>